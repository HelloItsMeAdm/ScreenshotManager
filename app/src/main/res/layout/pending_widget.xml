<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round"
    android:backgroundTint="@color/black">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/topTitle"
            android:layout_alignBottom="@id/topTitle"
            android:background="#00000000"
            android:foregroundGravity="center"
            android:layout_alignParentEnd="true"
            android:scaleX="-1"
            android:src="@drawable/white_refresh" />

        <RelativeLayout
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_h1"
                android:maxLines="1"
                android:text="ScreenshotManager"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/top"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/dark_gray"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/noLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/poppins_h1"
        android:gravity="center"
        android:text="No pending items!"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/leftImage1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/texts1"
            android:layout_alignBottom="@+id/texts1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <RelativeLayout
            android:id="@+id/texts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/leftImage1">

            <TextView
                android:id="@+id/upperText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/lowerText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upperText1"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/texts1"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/dark_gray"
            android:orientation="horizontal"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/leftImage2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/texts2"
            android:layout_alignBottom="@+id/texts2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <RelativeLayout
            android:id="@+id/texts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/leftImage2">

            <TextView
                android:id="@+id/upperText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/lowerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upperText2"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/texts2"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/dark_gray"
            android:orientation="horizontal"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/two"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/leftImage3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/texts3"
            android:layout_alignBottom="@+id/texts3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <RelativeLayout
            android:id="@+id/texts3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/leftImage3">

            <TextView
                android:id="@+id/upperText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/lowerText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upperText3"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/texts3"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/dark_gray"
            android:orientation="horizontal"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/three"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/leftImage4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/texts4"
            android:layout_alignBottom="@+id/texts4"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <RelativeLayout
            android:id="@+id/texts4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/leftImage4">

            <TextView
                android:id="@+id/upperText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/lowerText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upperText4"
                android:fontFamily="@font/poppins_p"
                android:maxLines="1"
                android:textColor="@color/green" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/texts4"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/dark_gray"
            android:orientation="horizontal"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/four"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        android:fontFamily="@font/poppins_p"
        android:textAllCaps="false"
        android:textColor="@color/dark_gray"
        android:visibility="invisible" />

</RelativeLayout>