<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/main</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/poppins_h1</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomSpinner">
        <item name="android:fontFamily">@font/poppins_p</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LottieFix" parent="Theme.AppCompat.DayNight">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ToastAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/ToastAnimationAnimation</item>
    </style>

    <style name="ToastAnimationAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
        <item name="android:windowHideAnimation">@anim/fadeout</item>
        <item name="android:windowShowAnimation">@anim/fadein</item>
    </style>

</resources>